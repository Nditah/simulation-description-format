{
  "name": "simulation-description-format",
  "displayName": "SDF Language Support",
  "description": "Language support for SDF (Simulation Description Format) files, an XML format that describes objects and environments for robot simulators, visualization, and control.",
  "version": "0.0.1",
  "publisher": "Nditah",
  "author": {
    "name": "Anyeh Ndi-Tah",
    "email": "nditah@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nditah/simulation-description-format"
  },
  "bugs": {
    "url": "https://github.com/Nditah/simulation-description-format/issues"
  },
  "homepage": "https://github.com/Nditah/simulation-description-format#readme",
  "keywords": [
    "sdf",
    "simulation",
    "robotics",
    "gazebo",
    "xml",
    "language-support"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:sdf"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts", 
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "test-schema": "npm run compile && npx mocha out/test/schema.test.js --reporter spec",
    "test-quick": "npm run compile && echo 'Basic compilation test passed âœ…'",
     "package": "vsce package",
    "publish": "vsce publish"
  },
  "contributes": {
    "languages": [
      {
        "id": "sdf",
        "aliases": [
          "SDF",
          "Simulation Description Format"
        ],
        "extensions": [
          ".sdf",
          ".world"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/sdf-light.svg",
          "dark": "./icons/sdf-dark.svg"
        }
      }
    ],
    "iconThemes": [
      {
        "id": "sdf-icons",
        "label": "SDF File Icons",
        "path": "./icons/sdf-icon-theme.json"
      }
    ],
    "grammars": [
      {
        "language": "sdf",
        "scopeName": "source.sdf",
        "path": "./syntaxes/sdf.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.19.8",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.57.1",
    "glob": "^10.0.0",
    "mocha": "^10.0.0",
    "typescript": "^5.5.4"
  }
}
